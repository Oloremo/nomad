{{#if this.showSummaries}}
  <div class="alloc-status-summaries" {{did-insert this.captureElement}}>
    {{#each-in @allocBlocks as |status count|}}
      {{#if (gt count 0)}}
        <JobStatus::AllocationStatusBlock @status={{status}} @count={{count}} @width={{compute (action this.calcPerc) count}} />
      {{/if}}
    {{/each-in}}
  </div>
{{else}}
  <div class="ungrouped-allocs">
    {{#each-in @allocBlocks as |status count|}}
      {{#if (gt count 0)}}
        {{#each (range 0 count)}}
          <span class="represented-allocation {{status}}"></span>
        {{/each}}
      {{/if}}
    {{/each-in}}
  </div>
{{/if}}